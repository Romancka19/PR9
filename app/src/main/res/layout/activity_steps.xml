<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FEAA"
    tools:context=".StepsActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="411dp"
        android:layout_height="388dp"
        android:layout_marginTop="344dp"
        android:background="#E4E4E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button9"
                android:layout_width="390dp"
                android:layout_height="69dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#C3C3C3"
                android:drawableLeft="@drawable/walking"
                android:paddingEnd="-100dp"
                android:text="маршруты"
                android:textColor="#F3B005"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button10"
                android:layout_width="390dp"
                android:layout_height="69dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#C3C3C3"
                android:drawableLeft="@drawable/tab"
                android:paddingEnd="-10dp"
                android:text="краткая информация"
                android:textColor="#079359"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button8"
                android:layout_width="390dp"
                android:layout_height="69dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#C3C3C3"
                android:drawableLeft="@drawable/alert"
                android:onClick="startNewActivity"
                android:paddingEnd="-10dp"
                android:text="информация"
                android:textColor="#079393"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button6" />
        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="306dp"
        android:layout_height="166dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/gr2" />

</androidx.constraintlayout.widget.ConstraintLayout>