<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAE790"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="334dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#F2FEAA"
        android:drawableLeft="@drawable/smartbut"
        android:text="моё смарт-устройство"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="334dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E4E4E4"
        android:drawableLeft="@drawable/geo"
        android:paddingEnd="-130dp"
        android:text="1.3 km"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button5"
        android:layout_width="334dp"
        android:layout_height="69dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#E4E4E4"
        android:drawableLeft="@drawable/fire"
        android:paddingEnd="-130dp"
        android:text="50 kcal"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="334dp"
        android:layout_height="69dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#E4E4E4"
        android:drawableLeft="@drawable/time"
        android:paddingEnd="-130dp"
        android:text="30 min"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="334dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#E4E4E4"
        android:drawableLeft="@drawable/reload"
        android:onClick="startNewActivity"
        android:paddingEnd="-100dp"
        android:text="1583 steps"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <FrameLayout
        android:layout_width="151dp"
        android:layout_height="138dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:background="#E3E3E3"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="65dp"
            app:srcCompat="@drawable/graph1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            app:srcCompat="@drawable/wifi" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="85dp"
            android:paddingTop="20dp"
            android:text="65 KG"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="151dp"
        android:layout_height="138dp"
        android:layout_marginTop="40dp"
        android:background="#E3E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7">

        <ImageView
            android:id="@+id/imageView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="65dp"
            app:srcCompat="@drawable/graph1" />

        <ImageView
            android:id="@+id/imageView34"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            app:srcCompat="@drawable/heart" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingLeft="65dp"
            android:paddingTop="20dp"
            android:text="82 bmp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>